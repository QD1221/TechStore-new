<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/daynight_bgColor"
    tools:context=".activity.GiohangActivity">

    <Toolbar
        android:id="@+id/tbGiohang"
        android:title="Giỏ hàng"
        android:background="@color/primaryColor"
        android:titleTextColor="@color/primaryTextColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvThongbao"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:text="Giỏ hàng của bạn đang trống"
                android:textColor="@color/daynight_textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ListView
                android:id="@+id/lvGiohang"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:background="@color/daynight_bgColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
        </FrameLayout>
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:background="@color/primaryLightColor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTongtien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0đ"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/secondaryDarkColor"/>

        </LinearLayout>


        <Button
            android:id="@+id/btThanhtoangiohang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/detail_page_cart_button_bg"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
            android:padding="16dp"
            android:paddingRight="16dp"
            android:text="Thanh toán"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />
    </LinearLayout>




</LinearLayout>