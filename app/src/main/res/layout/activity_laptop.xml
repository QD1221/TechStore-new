<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/daynight_bgColor"
    tools:context=".activity.LaptopActivity"
    android:orientation="vertical">
    <Toolbar
        android:id="@+id/tbLaptop"
        android:background="@color/primaryColor"
        android:title="Laptop"
        android:titleTextColor="@color/primaryTextColor"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <FrameLayout
            android:id="@+id/flcart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:paddingEnd="15dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_supermarket"/>


            <TextView
                android:id="@+id/tvcart"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:textColor="@color/black"
                android:layout_gravity="end|center"
                android:layout_marginBottom="9dp"
                android:gravity="center"
                android:textSize="8sp"
                android:background="@drawable/white_circle"
                android:backgroundTint="@color/secondaryColor"/>


        </FrameLayout>

    </Toolbar>
    <ListView
        android:id="@+id/lvLaptop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@color/daynight_bgColor">

    </ListView>

</LinearLayout>